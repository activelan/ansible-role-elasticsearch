# {{ ansible_managed }}

################################
# Elasticsearch
################################

# Elasticsearch home directory
ES_HOME={{ elasticsearch_home_dir_path }}

# Elasticsearch configuration directory
CONF_DIR={{ elasticsearch_etc_dir_path }}

# Elasticsearch data directory
DATA_DIR={{ elasticsearch_data_dir_path }}

# Elasticsearch log directory
LOG_DIR={{ elasticsearch_log_dir_path }}

# Elasticsearch log directory
PID_DIR={{ elasticsearch_pid_dir_path }}

# Elasticsearch Java path
{% if elasticsearch_java_home != '' %}
JAVA_HOME={{ elasticsearch_java_home }}
{% endif %}

# Additional Java OPTS
{% if elasticsearch_java_opts %}
ES_JAVA_OPTS={{ elasticsearch_java_opts | join(',') }}
{% endif %}

# Configure restart on package upgrade (true, every other setting will lead to not restarting)
RESTART_ON_UPGRADE={{ elasticsearch_restart_on_upgrade }}


################################
# Elasticsearch service
################################

# Run Elasticsearch as this user ID and group ID
ES_USER={{ elasticsearch_user_name }}
ES_GROUP={{ elasticsearch_group_name }}

# The number of seconds to wait before checking if Elasticsearch started successfully as a daemon process
ES_STARTUP_SLEEP_TIME="{{ elasticsearch_startup_sleep_time }}"


################################
# System properties
################################

# Maximum number of open files, defaults to 65535.
MAX_OPEN_FILES={{ elasticsearch_max_open_files }}

# Maximum locked memory size. Set to "unlimited" if you use the
# bootstrap.mlockall option in elasticsearch.yml. You must also set
# ES_HEAP_SIZE.
MAX_LOCKED_MEMORY={{ elasticsearch_max_locked_memory }}

# Maximum number of VMA (Virtual Memory Areas) a process can own
MAX_MAP_COUNT={{ elasticsearch_max_map_count }}
